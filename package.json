{
    "name": "vscode-scd",
    "displayName": "Sc Language Server",
    "description": "Language server support for the Sc programming language",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": ["Programming Languages"],
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:sc"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Sc Language Server Configuration (?)",
            "properties": {
                "sc.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "dependencies": {
        "vscode-languageclient": "9.0.1"
    },
    "devDependencies": {
        "@types/vscode": "1.85.0",
        "@types/node": "20.10.5"
    }
}
